        </activity>
        <activity android:name=".CadastroActivity" />
        <activity
            android:name=".AreaClienteActivity"
            android:label="@string/title_activity_area_cliente"
            android:theme="@style/AppTheme" />
        <activity android:name=".SolicitacaoEmprestimoActivity" />
        <activity android:name=".ConfirmacaoEmprestimoActivity" />
        <activity android:name=".SolicitacaoInvestimentoActivity" />
        <activity
            android:name=".AreaInvestidorActivity"
            android:label="@string/title_activity_area_investidor"
